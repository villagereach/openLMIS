<div class="form_container login">
  <h2><%= t(".login_to", :name => "vrMIS3") %></h2>

  <% form_for :login do |f| %>
    <dl class="inline">
      <dt><%= f.label :username, t("activerecord.attributes._all.username") %></dt>
      <dd><%= f.text_field :username, :class => 'autofocus' %></dd>

      <dt><%= f.label :password, t("activerecord.attributes._all.password") %></dt>
      <dd><%= f.password_field :password %></dd>
    </dl>

    <p class="submit"><%= f.submit t(".submit_button") %></p>
  <% end %>
</div>
<% javascript_tag do %>
  jQuery(function() {
    var ut = jQuery("#user_tools");
    if (ut.children().length === 0) ut.hide();
  });
<% end %>
